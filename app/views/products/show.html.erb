
<p>
  <strong>Title:</strong>
  <%= @product.title %>
</p>
<p>
  <strong>Seller:</strong>
  <%= link_to @product.user.username, @product.user %>
</p>
<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>
<p>
  <strong>Category:</strong>
  <%= @product.category.name %>
</p>
<% if !@product.picture.file.nil?%>
<p>
  <strong>Picture:</strong> <br>
  <%= image_tag @product.picture.square.url %>
</p>
<% end %>
 <% if can? :update, @product %>
<%= button_to 'Modify your product', edit_product_path(@product) , class: "btn btn-primary"%>
<%= button_to 'Delete product', product_path, method: :delete,
 data: { confirm: 'Are you sure you want to delete this product? This action is irreversible' },
  class: "btn btn-danger"  %>
<% end %>
<%= link_to 'all products', products_path %>
