<h1>New Product</h1>
<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <% end %>
  <div class="row">
  <%= form_for @product, class:"col s12" do |f| %>
<!-- # <%= render 'form', product: @product %> -->
<div class="row">
<div class="input-field col s12">
  <%= f.label :title %>
  <%= f.text_field :title,class:"validate" %>
</div>
</div>

<div class="row">
<div class="input-field col s12">
  <%= f.label :description %>
  <%= f.text_area :description,class:"materialize-textarea" %>
</div>
</div>

<div class="row">
  <%= f.label :price %>
  <%= f.text_field :price %>
</div>

 <!-- <%= f.label :picture %><br> -->

<div class="file-field input-field">
     <div class="btn">
       <span>Choose a picture</span>
       <%= f.file_field :picture %>
     </div>
     <div class="file-path-wrapper">
       <input class="file-path validate" type="text">
     </div>
   </div>
     <div class="input-field col s12">
<%= select_tag(:category_id, grouped_options_for_select(@grouped_cat), :prompt => "Select a category", class:"browser-default") %>
</div>
<% if current_user.admin %>
<%= link_to 'Or create a new category', new_category_path %>
<% end %>
<div class="actions">
  <%= f.submit "Create Product", class: "waves-effect waves-light btn" %>
</div>
<% end %>
</div>
<%= link_to 'Back', products_path %>
<script type="text/javascript">
$(document).ready(function() {
$('select').material_select();
});

</script>
