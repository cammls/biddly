
    <div class="container">

      <div class="starter-template">
        <h1>Biddly, sell your products to the highest bidders!</h1>
        <p class="lead">This is Biddly's home page.</p>
        <% if current_user %>
        <%= current_user.username%>
        <% end %>
      </div>
      <%= form_tag '/', :method => 'get' do %>
        <p>
          <%= text_field_tag :search, params[:search] %>
          <%= submit_tag "Search", :title => nil %>
        </p>
      <% end %>
      <% if @products %>
        <%@products.to_ary.each do |p| %>
        <%= p.title %>
        <%= p.description %>
        <%= p.price %>
        <% end %>
        <% end %>
    </div><!-- /.container -->
